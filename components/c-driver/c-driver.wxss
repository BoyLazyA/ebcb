.driver{
  width: 750rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  padding-left: 10rpx;
  background: white;
  border-radius: 15rpx;
  font-size: 1.1em;
}
.top{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 60%;
}
.driver_img{
  width: 20%;
  height: 100%;
  padding: 18rpx 0 0 13rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.d_img{
  width: 80%;
  height: 90%;
  border-radius: 50rpx;
}
.driver_body{
  display: flex;
  flex-direction: column;
  width: 65%;
  height: 100%;
}
.class{
  width: 100%;
  height: 50%;
  padding-top: 10rpx;
  display: flex;
  flex-direction: row;
}
.driver_phone_img{
  width: 40rpx;
  height: 40rpx;
}
.connect{
  height: 100%;
  width: 25%;
}
.connect_img{
  padding-top: 30rpx;
  width: 47%;
  height: 65%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.bottom{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 40%;
  padding-top: 20rpx;
}
.address{
  width: 70%;
  display: flex;
  flex-direction: row;
  
}
.address_img{
  width: 12%;
  height: 90%;
}
.add_img{
  padding-left: 15rpx;
  width: 50%;
  height: 50%;
}
.content{
  width: 88%;
  font-size: 0.9em;
  
}
.car_type{
  width: 30%;
  font-size: 0.9em;
}