page{
  background: rgb(236, 240, 240);
}

.swiper-item image {
  width: 100%;
}

.btn{
  padding: 17rpx 10rpx;
  width: 750rpx;
  display: flex;
  flex-direction: row;
}
.per_btn{
  width: 25%;
  height: 160rpx;
  display: flex;
  flex-direction: column;
}
.bton{
  width: 90%;
  height: 80%;
  background: rgb(240, 240, 240);
}
.bton::after{
  border: none;
}
.btnimage{
  width: 85%;
  height: 80%;
  padding: 9rpx;
  background: rgb(240, 240, 240);
  margin: 0;
  flex: 1;
  text-align: center;
}
.text{
  padding-top: 15rpx;
  flex: 1;
  text-align: center;
  font-size: 0.8em;
}

.swiper2{width: 100%;}

.list-item{
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 20rpx 10rpx ;
  font-size: 12pt;
  background: white;
  margin-bottom: 12rpx;
}

.first_second{
  width: 100%;
  padding-left: 10rpx;
  padding-bottom: 12rpx;
  font-weight: lighter;
  font-size: 0.9em;
  display: flex;
  flex-direction: row;
}
.start{
  width: 75%;
}
.end{
  width: 70%;
}
.date{
  width: 25%;
}
.right{
  width: 30%;
  font-size: 1.2em;
  color: rgb(250,80,10);
}
.confirm{
  margin-right: 60rpx;
  height: 55rpx;
  border: rgb(250,80,10) solid 1rpx;
  border-radius: 14rpx;
  line-height: 60rpx;
  flex: 1;
  text-align: center;
}

.third_part{
  width: 100%;
  height: 130rpx;
  display: flex;
  flex-direction: row;
}

.driver_poster{
  width: 20%;
  height: 100%;
  display: flex;
  flex-direction: column;
  
}
.driver_img{
  width: 50%;
  padding-left: 32rpx;
  padding-top: 14rpx;
  height: 65%;
}
.driver_name{
  width: 100%;
  height: 35%;
  font-size: 0.9em;
  padding-top: 4rpx;
  flex: 1;
  text-align: center;
}

.third_body{
  width: 80%;
  height: 100%;
  display: flex;
  flex-direction: row;
}
.body{
  width: 65%;
  height: 100%;
  display: flex;
  flex-direction: column;
  font-size: 0.8em;
  padding-top: 18rpx;
}

.seats_number{
  padding-top: 7rpx;
}

.connect{
  width: 35%;
  height: 100%;
}
.connect_img{
  padding: 25rpx 0 0 35rpx;
  width: 50%;
  height: 60%;
}

.remarks{
  width: 100%;
  padding-left: 5px;
  font-weight: lighter;
  font-size: 0.8em;
}


