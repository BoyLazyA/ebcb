
.swiper{width: 100%;}


.ul{
  width: 750rpx;
  display: flex;
  flex-direction: column;
}
.li{
  width: 100%;
  height: 150rpx;
  margin: 20rpx 20rpx;
  display: flex;
  flex-direction: row;
}
.left_text{
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 70%;
}
.active_introduce{
  height: 70%;
  font-size: 36rpx;
  width: 100%;
  padding-top: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}
.active_address{
  height: 30%;
  width: 100%;
  font-size: 30rpx;
}
.right{
  color: rgb(255, 100, 15);
  height: 100%;
  width: 30%;
  display: flex;
  align-items: center;
  vertical-align: middle;
}


.job_seeker{
  width: 100%;
  height: 100rpx;
  padding-top: 20rpx;
  background: white;
  display: flex;
  flex-direction: row;
}
.seeker_img{
  width: 25%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.jobseeker_img{
  width: 110rpx;
  height: 90rpx;
}
.seeker_information{
  width: 75%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.phone{
  width: 100%;
  height: 50%;
}
.class{
  padding-top: 10rpx;
  display: flex;
  flex-direction: row;
}
.driver_phone_img{
  width: 40rpx;
  height: 40rpx;
}

.skill{
  width: 720rpx;
  padding: 15rpx 10rpx 15rpx 20rpx;
  background: white;
}