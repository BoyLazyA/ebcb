.ad_img{
  width: 100%;
  height: 140px;
}


.driver{
  width: 750rpx;
  height: 160rpx;
  display: flex;
  flex-direction: row;
  background: white;
}
.driver_img{
  width: 20%;
  height: 100%;
  padding: 24rpx 0 0 20rpx;
}
.d_img{
  width: 75%;
  height: 70%;
  border-radius: 55rpx;
}
.driver_body{
  width: 80%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.name{
  padding-top: 20rpx;
  width: 100%;
  height: 50%;
}
.sex_date{
  width: 100%;
  height: 50%;
  display: flex;
  flex-direction: row;
}
.sex{
  width: 40%;
  height: 100%;
}
.male_info{
  width: 85rpx;
  height: 50rpx;
  border: solid 1rpx;
  border-radius: 10rpx;
  padding-left: 10rpx;
  background: rgb(20,150,219);
}
.female_info{
  width: 85rpx;
  height: 50rpx;
  border: solid 1rpx;
  border-radius: 10rpx;
  padding-left: 10rpx;
  background: rgb(255,0,255);
}
.date{
  width: 60%;
  height: 100%;
  font-size: 30rpx;
  padding-top: 15rpx;
}


.flex-wrp-row {
  display: flex;
  flex-direction: row;
}
.item {
  padding: 20rpx;
  position: relative;
  height: 80rpx;
  width: 750rpx;
  background: white;
}
.item-left {
   flex: 1; 
   align-items:center;
}
.item-right {
  position: relative;
  align-items:center;
}
.text{
  margin-right: 40rpx;
}
.route{
  height: 60rpx;
  width: 240rpx;
  border-radius: 10rpx;
}
.double{
  height: 25rpx;
  width: 60rpx;
}
.add_img{
  width: 30rpx;
  height: 39rpx;
}


.flex-wrp{
  display: flex;
  flex-direction: row;
}
.ite{
  padding: 20rpx;
  position: relative;
  width: 750rpx;
  background: white;
}
.item-lef {
   flex: 1; 
   align-items:center;
}
